@model IEnumerable<CHIC_CHARM2.Models.Sanpham>

@{
    ViewData["Title"] = "Quanlysanpham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="content-wrapper">
<div>
    <h1 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white me-2">
            <i class="mdi mdi-home"></i>
        </span>
        Quản lý sản phẩm
    </h1>
</div>

<div>
    <a class="btn btn-success btn-create-product" asp-action="Themsanpham">Thêm sản phẩm</a>


    <table class="table table-striped">
        <thead>
            <tr class="table th">
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Đơn giá
                </th>
                <th>
                    Mô tả ngắn
                </th>
                <th>
                    Tình trạng
                </th>
                <th>
                    Ảnh sản phẩm
                </th>
                <th>
                    Mã danh mục
                </th>
                <th>
                    Hành động
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.Tensp)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.Dongia)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.Mota)
                    </td>
                    <td style="text-align: center">

                        @Html.DisplayFor(modelItem => item.Tinhtrang)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.Hinhchinh)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.Madm)
                    </td>
                    <td style="text-align: center">
                        <a class="btn btn-sm btn-edit" asp-action="Edit" asp-route-id="@item.Masp">Sửa</a>
                        <a class="btn btn-sm btn-delete" asp-action="Delete" asp-route-id="@item.Masp"> Xóa  </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>

